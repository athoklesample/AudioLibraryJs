            </footer>
        </div>
        <div id="loading"><span>Loading...Please Wait</span></div>
        @Html.Partial("_TemplateErrorMessage")
        @Html.Partial("_SampleControl")        
        @Html.RenderJsBundle("~/Scripts/other.js.bundle", BundleOptions.MinifiedAndCombined)
        @Html.RenderJsBundle("~/Scripts/audiolibrary.js.bundle", BundleOptions.Normal)
        @RenderSection("scripts", required: false)
    </body>
</html>